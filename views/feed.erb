<div class="body-container">
	<h4 class="display-4" id="feed_header">Your Latest Posts</h4>
	<div id="user_posts">
		<% @posts.each do |post| %>
			<h3> <%= post.title %> </h3>
			<a href="/post/<%= post.id %>">Click for full Post</a>
		<% end %>
	</div>

	<div id="posts_wrapper">
		<form action="/feed" method="POST">
			<div class="form-group">
				<label>New Post: </label><br>
				<input type="text" name="post[title]" placeholder="Title">
			</div>
			<div class="form-group">
				<textarea rows="10" cols="65" name="post[content]"></textarea>
			</div>
			<div class="form-group">	
				<input type="submit" name="submit">
			</div>
		</form>
	</div>
</div>

